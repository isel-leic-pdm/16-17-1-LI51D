<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="isel.pdm.demos.mymoviedb">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MyMovieDBApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launch"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".presentation.CreditsActivity" />
        <activity android:name=".presentation.MovieDetailActivity" />
        <activity
            android:name=".presentation.SplashActivity"
            android:noHistory="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".services.MovieListUpdater"
            android:enabled="true"
            android:exported="true" />

        <provider
            android:name=".models.content.MovieInfoProvider"
            android:authorities="isel.pdm.demos.mymoviedb"
            android:enabled="true"
            android:exported="true"
            android:multiprocess="false" />

    </application>

</manifest>